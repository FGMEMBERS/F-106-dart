<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttour2</object-name>
    <object-name>intverriere</object-name>

    <!-- Objets transparents -->
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitreA</object-name>
    <object-name>intvitreB</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/F-106-dart/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -4.150 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.650 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/F-106-dart/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -5.397 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.780 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntVerriere</name>
    <object-name>inttour2</object-name>
    <object-name>intverriere</object-name>
    <object-name>intvitreB</object-name>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>IntVerriere</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 35 </factor>
    <center>
      <x-m> -2.940 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.129 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

